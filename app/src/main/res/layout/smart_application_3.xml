<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:id="@+id/toolbar_smart_application_3"
            android:background="#FFFFFF"
            android:elevation="20dp">


            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/toolbar_back_smart_application_3"
                android:background="@drawable/ic_arrow_back_black">

            </Button>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Smart Application"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/opensans"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                >

            </TextView>


        </RelativeLayout>
        <EditText
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:textAlignment="textStart"
            android:hint="What makes you a prefect candidate and why?"
            android:textColor="#4e74f4"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/toolbar_smart_application_3"
            android:background="#DBE3FD"
            android:id="@+id/edittext_1"
            android:textColorHint="#4e74f4"
            android:textSize="18sp"
            android:maxHeight="120dp"
            android:fontFamily="@font/opensans"
            android:maxLines="8"
            android:layout_centerHorizontal="true">

        </EditText>
        <EditText
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:maxHeight="120dp"
            android:fontFamily="@font/opensans"
            android:maxLines="8"
            android:hint="Why should we hire you?"
            android:textColorHint="#4e74f4"
            android:scrollbars="vertical"
            android:textColor="#4e74f4"
            android:layout_marginTop="20dp"
            android:background="#DBE3FD"
            android:textSize="18sp"
            android:layout_below="@+id/edittext_1"
            android:id="@+id/edittext_2"
            android:layout_centerHorizontal="true">

        </EditText>

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edittext_2"
            android:layout_marginTop="300dp"
            android:background="@drawable/button"
            android:text="Submit Application"
            android:textColor="@android:color/white"
            android:fontFamily="@font/popiins"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/submit_application">

        </Button>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/submit_application"
            android:src="@drawable/status_application_3"
            >

        </ImageView>


    </RelativeLayout>
</ScrollView>